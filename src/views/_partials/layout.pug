doctype html
head
  title Ivy Demo Store - #{title}
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  script(src='https://cdn.tailwindcss.com?plugins=forms,typography,aspect-ratio')
  script.
    tailwind.config = {
      corePlugins: {
        preflight: false,
      }
    }
  link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
  link(href='https://fonts.googleapis.com/css2?family=Work+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap' rel='stylesheet')
  link(rel="stylesheet", href="/style.css")
  block scripts
body.font-light(style='min-height: 100vh; margin: 0px; background-color: #F9FAFA')
  div.p-4.mx-auto.max-w-6xl(style='min-height: 100vh;')
    img(src='/ivy-logo.svg').mb-16.mt-4
    if !hideTitle
      h1.text-3xl.font-medium.mb-3.text-center #{title}
    block content
