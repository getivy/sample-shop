    script.
      function move() {
        window.location.href = '/sold-out'
      }

    script.
      function onClick() { 
        fetch('/checkout-bits', { method: 'POST' })
        .then(response => response.json())
        .then(data => {
          if (data.soldOut === true) {
            move()
          }
          else {
            startIvyCheckout(data.url , 'popup')
          }
        })
      }

